	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/ele.13904},
	journaltitle = {Ecology Letters},
	keywords = {biogeography,functional traits,latitudinal diversity gradient,metabarcoding,soil eukaryotes},
	number = {1},
	pages = {65--76},
	title = {Towards revealing the global diversity and community assembly of soil eukaryotes},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/ele.13904},
	volume = {25},
	bdsk-url-1 = {https://onlinelibrary.wiley.com/doi/abs/10.1111/ele.13904},
